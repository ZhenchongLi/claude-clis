{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Debug CLI",
      "type": "debugpy",
      "request": "launch",
      "module": "claude_clis.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "args": "${input:cliArgs}"
    }
  ],
  "inputs": [
    {
      "id": "cliArgs",
      "description": "CLI arguments",
      "type": "promptString",
      "default": "--help"
    }
  ]
}
